{
  "manifest_version": 2,

  "name": "Sticky Notes (BETA)",
  "description": "Take notes with sticky notes on any webpage",
  "version": "0.1.3",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": ["activeTab"],
  "icons": {
    "64": "icon.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [],
      "js": ["app-bundle.js"]
    }
  ],
  "background": {
    "scripts": ["background-bundle.js"],
    "persistent": false
  }
}
